<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>fr/eni/encheres/groupe_2/controller/HomeController.java</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>accueil</servlet-name>
        <jsp-file>/WEB-INF/view/EncherePage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>accueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>SignUp</servlet-name>
    <jsp-file>/WEB-INF/view/SignUp.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/view/LoginPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/loginpage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>vente</servlet-name>
        <jsp-file>/WEB-INF/view/DetailVente.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>vente</servlet-name>
        <url-pattern>/jspvente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>detailArticle</servlet-name>
        <jsp-file>/WEB-INF/view/DetailArticle.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>detailArticle</servlet-name>
        <url-pattern>/detailArticle</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>profilUtilisateur</servlet-name>
        <jsp-file>/WEB-INF/view/ProfilPAge.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>profilUtilisateur</servlet-name>
        <url-pattern>/profilPage</url-pattern>
    </servlet-mapping>


</web-app>